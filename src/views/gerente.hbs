<div class="col-12 pt-5">
    <div class="container bg-white p-4 pt-5 shadow">
        <div class="row border-bottom mb-5 ">
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        <h1 class="text-decoration-underline mb-3 text-end">Welcome Manager</h1>
                    </div>
                    <div class="my-auto col-4 d-flex justify-content-end">
                        <a class="mx-3 text-decoration-none" href="/new-gerente/{{gerenteID}}"><i class="fa-solid fa-user-plus"></i> Agregar Gerente</a>
                        <a class="text-decoration-none" href="/"><i class="fa-solid fa-house"></i>Salir</a>
                    </div>
                </div>

            </div>
        </div>

        <div>
            {{#if operarios}}
            <table class="table table-hover border p-3 mt-4">
                <div class="d-flex justify-content-between">
                    <h3>Operarios</h3>
                    <a class="btn btn-primary py-2" href="/new-operario/{{gerenteID}}">Agregar Operario</a>
                </div>
                <thead class="bg-light">
                    <tr>
                        <th class="text-center" scope="col">Nombre</th>
                        <th class="text-center" scope="col">Cedula</th>
                        <th class="text-center" scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each operarios}}
                    <tr>
                        <td class="text-center">{{nombre}}</td>
                        <td class="text-center">{{cedula}}</td>
                        <td class="text-center"><a href="/delete-operario/{{GerenteID}}/{{id}}"><i
                                    class="fa-solid fa-trash text-danger"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            {{else}}
            <div>
                <h1 class="text-center">NO HAY OPERARIOS</h1>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary w-50 py-2" href="/new-operario/{{gerenteID}}">Agregar</a>
                </div>
            </div>
            {{/if}}


        </div>
    </div>
</div>
</div>